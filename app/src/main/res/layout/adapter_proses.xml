<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/layouthomes"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_8sdp">

    <RelativeLayout
        android:id="@+id/layoutmenunggu1s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/_3sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_images"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/imagenoimage"
                app:riv_corner_radius="@dimen/_8sdp" />

            <LinearLayout
                android:id="@+id/layoutnamas"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_63sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical">

<!--                <TextView-->
<!--                    android:id="@+id/tv_kategoris"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginHorizontal="@dimen/_8sdp"-->
<!--                    android:layout_toEndOf="@+id/imvImage"-->
<!--                    android:text="Judul"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textSize="@dimen/_12sdp"-->
<!--                    android:textStyle="bold" />-->


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tv_deskripsiss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_7sdp"
                        android:text="Deskripsi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_judul"
                        android:visibility="gone"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:text="Selengkapnya.."
                        android:layout_marginTop="@dimen/_32sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>